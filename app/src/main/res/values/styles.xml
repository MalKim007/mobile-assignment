<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- FOREST APOTHECARY DESIGN SYSTEM - Component Styles                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- BUTTON STYLES                                                        -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <!-- Primary Button - Solid Forest Green -->
    <style name="ForestButton" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/snow_white</item>
        <item name="backgroundTint">@color/forest_green</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="rippleColor">@color/mint_sage</item>
    </style>

    <!-- Primary Button Dark - Deep Forest -->
    <style name="ForestButton.Dark">
        <item name="backgroundTint">@color/deep_forest</item>
    </style>

    <!-- Outlined Button - Forest Green Border -->
    <style name="ForestButtonOutlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/forest_green</item>
        <item name="strokeColor">@color/forest_green</item>
        <item name="strokeWidth">1.5dp</item>
        <item name="cornerRadius">24dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="rippleColor">@color/mint_sage</item>
        <item name="android:minHeight">44dp</item>
    </style>

    <!-- Text Button - Sage Green -->
    <style name="ForestButtonText" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/sage_green</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="rippleColor">@color/mint_sage</item>
    </style>

    <!-- Cancel Button - Outlined with Deep Forest text -->
    <style name="ForestButtonCancel" parent="Widget.Material3.Button.TextButton">
        <item name="android:textColor">@color/deep_forest</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">13sp</item>
        <item name="rippleColor">@color/mint_sage</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- CARD STYLES                                                          -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <!-- Standard Card - Snow White with subtle elevation -->
    <style name="ForestCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/snow_white</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">2dp</item>
        <item name="contentPadding">16dp</item>
        <item name="rippleColor">@color/ripple</item>
    </style>

    <!-- Elevated Card - More shadow -->
    <style name="ForestCard.Elevated">
        <item name="cardElevation">6dp</item>
    </style>

    <!-- Flat Card - No elevation -->
    <style name="ForestCard.Flat">
        <item name="cardElevation">0dp</item>
        <item name="strokeWidth">1dp</item>
        <item name="strokeColor">@color/mint_sage</item>
    </style>

    <!-- Header Card - Deep Forest background -->
    <style name="ForestCard.Header">
        <item name="cardBackgroundColor">@color/deep_forest</item>
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <!-- Summary Card - Forest Green background -->
    <style name="ForestCard.Summary">
        <item name="cardBackgroundColor">@color/forest_green</item>
        <item name="cardCornerRadius">16dp</item>
        <item name="cardElevation">3dp</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- TEXT STYLES                                                          -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <!-- Base Text Style -->
    <style name="ForestText" parent="android:Widget.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- App Title - Elegant Serif -->
    <style name="ForestText.Title">
        <item name="android:textSize">26sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!-- Subtitle -->
    <style name="ForestText.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/mint_sage</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Section Header -->
    <style name="ForestText.SectionHeader">
        <item name="android:textSize">13sp</item>
        <item name="android:textColor">@color/sage_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.1</item>
    </style>

    <!-- Card Title -->
    <style name="ForestText.CardTitle">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/deep_forest</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Body Text -->
    <style name="ForestText.Body">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
    </style>

    <!-- Caption -->
    <style name="ForestText.Caption">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sage_green</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <!-- Label -->
    <style name="ForestText.Label">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/sage_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- Metrics/Monospace -->
    <style name="ForestText.Metrics">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/forest_green</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:lineSpacingMultiplier">1.4</item>
    </style>

    <!-- Hint Text -->
    <style name="ForestText.Hint">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/sage_green</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:fontStyle">italic</item>
    </style>

    <!-- Match Status Text -->
    <style name="ForestText.StatusMatch">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/snow_white</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:letterSpacing">0.05</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- CHECKBOX STYLE                                                       -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <style name="ForestCheckbox" parent="Widget.Material3.CompoundButton.CheckBox">
        <item name="buttonTint">@color/forest_green</item>
        <item name="android:minWidth">24dp</item>
        <item name="android:minHeight">24dp</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- PROGRESS BAR STYLE                                                   -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <style name="ForestProgressBar" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressTint">@color/sage_green</item>
        <item name="android:progressBackgroundTint">@color/cream_mint</item>
        <item name="android:minHeight">8dp</item>
    </style>

    <style name="ForestProgressBar.Circular" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateTint">@color/sage_green</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- DIVIDER STYLE                                                        -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <style name="ForestDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/mint_sage</item>
        <item name="android:alpha">0.5</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- SPINNER/DROPDOWN STYLE                                               -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <style name="ForestSpinner" parent="Widget.AppCompat.Spinner">
        <item name="android:background">@drawable/bg_spinner</item>
        <item name="android:popupBackground">@color/snow_white</item>
        <item name="android:dropDownVerticalOffset">8dp</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- BOTTOM NAVIGATION STYLE                                              -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <!-- Bottom Nav Active Indicator - Soft mint green pill -->
    <style name="BottomNavIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/mint_sage</item>
    </style>

    <!-- ─────────────────────────────────────────────────────────────────── -->
    <!-- COMPARISON TABLE STYLES                                              -->
    <!-- ─────────────────────────────────────────────────────────────────── -->

    <!-- Table Header Cell - Bold forest green -->
    <style name="TableHeaderCell">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/forest_green</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.03</item>
    </style>

    <!-- Table Data Cell - Monospace for metrics -->
    <style name="TableDataCell">
        <item name="android:layout_width">56dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/deep_forest</item>
        <item name="android:fontFamily">monospace</item>
    </style>

    <!-- Table Model Name Cell - Serif font -->
    <style name="TableModelCell">
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">@color/deep_forest</item>
        <item name="android:fontFamily">serif</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

</resources>
