<?xml version="1.0" encoding="utf-8"?>
<!-- Spinner/Dropdown Background -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/snow_white" />
            <corners android:radius="12dp" />
            <stroke
                android:width="1.5dp"
                android:color="@color/mint_sage" />
        </shape>
    </item>
    <!-- Dropdown Arrow -->
    <item
        android:gravity="end|center_vertical"
        android:right="12dp">
        <rotate
            android:fromDegrees="135"
            android:pivotX="50%"
            android:pivotY="50%">
            <shape android:shape="rectangle">
                <size
                    android:width="8dp"
                    android:height="8dp" />
                <solid android:color="@android:color/transparent" />
                <stroke
                    android:width="2dp"
                    android:color="@color/sage_green" />
            </shape>
        </rotate>
    </item>
</layer-list>
