<?xml version="1.0" encoding="utf-8"?>
<!-- Forest Apothecary - Model Comparison Card
     Aesthetic: Botanical specimen card with scientific data annotation
     Each model is presented like a catalogued specimen with measured properties -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardModel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/snow_white"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="@color/mint_sage"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- CARD HEADER - Specimen identification                           -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_card_header_gradient"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Model indicator dot -->
            <View
                android:id="@+id/modelIndicator"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@drawable/bg_indicator_dot"
                app:layout_constraintBottom_toBottomOf="@id/tvModelName"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvModelName" />

            <!-- Model Name - Specimen name style -->
            <TextView
                android:id="@+id/tvModelName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:fontFamily="serif"
                android:textColor="@color/deep_forest"
                android:textSize="18sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                app:layout_constraintEnd_toStartOf="@id/tvPredictionCount"
                app:layout_constraintStart_toEndOf="@id/modelIndicator"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Qwen 2.5 1.5B" />

            <!-- Prediction Count Badge -->
            <TextView
                android:id="@+id/tvPredictionCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_count_badge"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="200/200"
                tools:textColor="@color/forest_green" />

            <!-- Status text -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="12dp"
                android:fontFamily="sans-serif"
                android:letterSpacing="0.05"
                android:textAllCaps="true"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@id/modelIndicator"
                app:layout_constraintTop_toBottomOf="@id/tvModelName"
                tools:text="COMPLETE"
                tools:textColor="@color/forest_green" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- METRICS SECTION - Comparative insights panel                    -->
        <!-- Botanical specimen style: Rankings, Strengths, Weaknesses       -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <LinearLayout
            android:id="@+id/metricsSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            tools:visibility="visible">

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- ACCURACY + MATCH COUNT - Primary metrics header            -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_accuracy_highlight"
                android:padding="12dp"
                android:layout_marginBottom="12dp">

                <TextView
                    android:id="@+id/labelAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:letterSpacing="0.1"
                    android:text="ACCURACY"
                    android:textAllCaps="true"
                    android:textColor="@color/forest_green"
                    android:textSize="10sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvAccuracy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:textColor="@color/deep_forest"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="85.5%" />

                <!-- Match Count below accuracy label -->
                <TextView
                    android:id="@+id/tvMatchCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="sans-serif"
                    android:textColor="@color/sage_green"
                    android:textSize="11sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelAccuracy"
                    tools:text="Correct: 171 / 200" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- RANKING BADGES - Award ribbons for top performance         -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

            <LinearLayout
                android:id="@+id/badgesContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="12dp"
                android:visibility="gone"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tvBadge1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/deep_forest"
                    android:textSize="12sp"
                    tools:text="ðŸ¥‡ Highest Accuracy" />

                <TextView
                    android:id="@+id/tvBadge2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/deep_forest"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="ðŸ¥ˆ 2nd Fastest Inference"
                    tools:visibility="visible" />

            </LinearLayout>

            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
            <!-- STRENGTHS & WEAKNESSES - Side by side comparison           -->
            <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:baselineAligned="false">

                <!-- STRENGTHS Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingEnd="8dp">

                    <TextView
                        android:id="@+id/labelStrengths"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:text="STRENGTHS"
                        android:textAllCaps="true"
                        android:textColor="@color/forest_green"
                        android:textSize="9sp" />

                    <LinearLayout
                        android:id="@+id/strengthsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvStrength1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/deep_forest"
                            android:textSize="12sp"
                            tools:text="â€¢ #1 Recall (0.83)" />

                        <TextView
                            android:id="@+id/tvStrength2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/deep_forest"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="â€¢ #2 Precision (0.76)"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Vertical Divider -->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_marginVertical="4dp"
                    android:background="@color/mint_sage"
                    android:alpha="0.4" />

                <!-- WEAKNESSES Column -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingStart="8dp">

                    <TextView
                        android:id="@+id/labelWeaknesses"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="6dp"
                        android:fontFamily="sans-serif-medium"
                        android:letterSpacing="0.1"
                        android:text="WEAKNESSES"
                        android:textAllCaps="true"
                        android:textColor="@color/sage_green"
                        android:textSize="9sp" />

                    <LinearLayout
                        android:id="@+id/weaknessesContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tvWeakness1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="2dp"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/sage_green"
                            android:textSize="12sp"
                            tools:text="â€¢ #6 TTFT (450ms)" />

                        <TextView
                            android:id="@+id/tvWeakness2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="sans-serif"
                            android:textColor="@color/sage_green"
                            android:textSize="12sp"
                            android:visibility="gone"
                            tools:text="â€¢ #7 Memory (650 KB)"
                            tools:visibility="visible" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <!-- INCOMPLETE STATE - When predictions < 200                       -->
        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/incompleteSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="24dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerContainer"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/ivIncompleteIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:alpha="0.4"
                android:src="@drawable/ic_leaf"
                app:tint="@color/sage_green"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Incomplete" />

            <TextView
                android:id="@+id/tvIncompleteMessage"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:lineSpacingMultiplier="1.3"
                android:text="Complete all 200 predictions\nto view aggregate metrics"
                android:textColor="@color/sage_green"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivIncompleteIcon" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
