<?xml version="1.0" encoding="utf-8"?>
<!-- Forest Apothecary - Prediction Detail Dialog (Clean Version) -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog"
    android:clipToOutline="true"
    android:fillViewport="true"
    android:scrollbars="none">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- HEADER - Deep Forest with rounded top corners                      -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/headerSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_dialog_header"
            android:padding="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- ID Badge -->
            <TextView
                android:id="@+id/tvDetailId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_badge"
                android:fontFamily="sans-serif-medium"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:textColor="@color/snow_white"
                android:textSize="13sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="#11" />

            <!-- Match Status Badge -->
            <TextView
                android:id="@+id/tvDetailMatchStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_status_match"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.03"
                android:paddingHorizontal="12dp"
                android:paddingVertical="5dp"
                android:textAllCaps="true"
                android:textColor="@color/snow_white"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/tvDetailId"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tvDetailId"
                tools:text="MATCH" />

            <!-- Food Name -->
            <TextView
                android:id="@+id/tvDetailName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="serif"
                android:textColor="@color/snow_white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailId"
                tools:text="Almond No Sugars" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- CONTENT AREA - Snow White background                               -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/contentSection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/snow_white"
            android:paddingHorizontal="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/headerSection">

            <!-- INGREDIENTS LABEL -->
            <TextView
                android:id="@+id/labelDetailIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:text="INGREDIENTS"
                android:textAllCaps="true"
                android:textColor="@color/sage_green"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <!-- INGREDIENTS BOX -->
            <TextView
                android:id="@+id/tvDetailIngredients"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_allergen_box"
                android:fontFamily="sans-serif"
                android:lineSpacingMultiplier="1.3"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textSize="13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelDetailIngredients"
                tools:text="Water, Almond (2.3%), Minerals (Calcium Citrate), Sea Salt, Stabiliser: Gellan Gum, Vitamins." />

            <!-- ALLERGEN ANALYSIS LABEL -->
            <TextView
                android:id="@+id/labelDetailAllergens"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:text="ALLERGEN ANALYSIS"
                android:textAllCaps="true"
                android:textColor="@color/sage_green"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailIngredients" />

            <!-- ALLERGEN BOX -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/allergenCard"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_allergen_box"
                android:padding="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelDetailAllergens">

                <!-- Source Row -->
                <TextView
                    android:id="@+id/labelRawAllergens"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Source"
                    android:textColor="@color/sage_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvDetailAllergensRaw"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/labelRawAllergens"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelRawAllergens"
                    tools:text="Nuts" />

                <!-- Divider 1 -->
                <View
                    android:id="@+id/allergenDivider1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/mint_sage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelRawAllergens" />

                <!-- Expected Row -->
                <TextView
                    android:id="@+id/labelMappedAllergens"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Expected"
                    android:textColor="@color/sage_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/allergenDivider1" />

                <TextView
                    android:id="@+id/tvDetailAllergensMapped"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/forest_green"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/labelMappedAllergens"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelMappedAllergens"
                    tools:text="tree nut" />

                <!-- Divider 2 -->
                <View
                    android:id="@+id/allergenDivider2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginVertical="10dp"
                    android:background="@color/mint_sage"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelMappedAllergens" />

                <!-- Predicted Row (NO leaf icon) -->
                <TextView
                    android:id="@+id/labelPredictedAllergens"
                    android:layout_width="72dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif"
                    android:text="Predicted"
                    android:textColor="@color/sage_green"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/allergenDivider2" />

                <TextView
                    android:id="@+id/tvDetailPredicted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-medium"
                    android:textColor="@color/forest_green"
                    android:textSize="12sp"
                    app:layout_constraintBaseline_toBaselineOf="@id/labelPredictedAllergens"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/labelPredictedAllergens"
                    tools:text="tree nut" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- PERFORMANCE METRICS LABEL -->
            <TextView
                android:id="@+id/labelDetailMetrics"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.08"
                android:text="PERFORMANCE METRICS"
                android:textAllCaps="true"
                android:textColor="@color/sage_green"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/allergenCard" />

            <!-- METRICS BOX -->
            <TextView
                android:id="@+id/tvDetailMetrics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_metrics_box"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.4"
                android:padding="12dp"
                android:textColor="@color/forest_green"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/labelDetailMetrics"
                tools:text="Latency:      14208 ms\nTTFT:         7866 ms\nITPS:         13 tok/s\nOTPS:         7 tok/s\n\nJava Heap:    -12897 KB\nNative Heap:  -1783 KB\nTotal PSS:    49355 KB" />

            <!-- TIMESTAMP -->
            <TextView
                android:id="@+id/tvDetailTimestamp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:fontFamily="sans-serif"
                android:gravity="center"
                android:textColor="@color/sage_green"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailMetrics"
                tools:text="Analyzed: Dec 28, 2025 at 14:32:05" />

            <!-- CLOSE BUTTON -->
            <Button
                android:id="@+id/btnClose"
                style="@style/ForestButtonOutlined"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_marginTop="16dp"
                android:text="Close"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDetailTimestamp" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
