<?xml version="1.0" encoding="utf-8"?>
<!-- Forest Apothecary - Clean Item Card -->
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="5dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/snow_white"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:rippleColor="@color/ripple">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 1: Checkbox + ID Badge + Status                                -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:buttonTint="@color/forest_green"
            app:buttonIconTint="@color/snow_white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvFoodId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_badge"
            android:fontFamily="sans-serif-medium"
            android:paddingHorizontal="8dp"
            android:paddingVertical="3dp"
            android:textColor="@color/snow_white"
            android:textSize="11sp"
            app:layout_constraintStart_toEndOf="@id/checkBox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_goneMarginStart="0dp"
            tools:text="#11" />

        <!-- Status: Processing spinner -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:indeterminateTint="@color/sage_green"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tvFoodId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFoodId"
            tools:visibility="gone" />

        <!-- Status: Completed icon -->
        <ImageView
            android:id="@+id/ivStatusIcon"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@drawable/ic_check_circle"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/tvFoodId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tvFoodId"
            tools:ignore="ContentDescription"
            tools:visibility="gone" />

        <!-- Status text (hidden by default) -->
        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="6dp"
            android:fontFamily="sans-serif"
            android:textColor="@color/sage_green"
            android:textSize="11sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/progressBar"
            app:layout_constraintEnd_toStartOf="@id/progressBar"
            app:layout_constraintTop_toTopOf="@id/progressBar"
            tools:text="Analyzing..."
            tools:visibility="gone" />

        <!-- Barrier to handle checkbox GONE state -->
        <androidx.constraintlayout.widget.Barrier
            android:id="@+id/barrierRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:barrierDirection="bottom"
            app:constraint_referenced_ids="checkBox,tvFoodId" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 2: Food Name                                                   -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/tvFoodName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="2"
            android:textColor="@color/deep_forest"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/barrierRow1"
            tools:text="Almond No Sugars" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 3: Ingredients                                                 -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/tvIngredients"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif"
            android:maxLines="2"
            android:textColor="@color/sage_green"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFoodName"
            tools:text="Water, Almond (2.3%), Minerals (Calcium Citrate), Sea Salt..." />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- DIVIDER                                                            -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <View
            android:id="@+id/divider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/cream_mint"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIngredients" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 4: Expected Allergens                                          -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/labelGroundTruth"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:text="Expected"
            android:textColor="@color/sage_green"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/divider" />

        <TextView
            android:id="@+id/tvGroundTruth"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/labelGroundTruth"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/labelGroundTruth"
            tools:text="tree nut" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 5: Predicted Allergens                                         -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/labelPredicted"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:text="Predicted"
            android:textColor="@color/sage_green"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelGroundTruth" />

        <TextView
            android:id="@+id/tvPredicted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:fontFamily="sans-serif-medium"
            android:textColor="@color/forest_green"
            android:textSize="12sp"
            app:layout_constraintBaseline_toBaselineOf="@id/labelPredicted"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/labelPredicted"
            tools:text="tree nut" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 6: Status Badge + Metrics (on same row)                        -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/tvMatchStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/bg_status_match"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.03"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:textAllCaps="true"
            android:textColor="@color/snow_white"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelPredicted"
            tools:text="MATCH"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tvMetrics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="monospace"
            android:gravity="end"
            android:textColor="@color/sage_green"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintBaseline_toBaselineOf="@id/tvMatchStatus"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvMatchStatus"
            tools:text="Latency: 14208ms"
            tools:visibility="visible" />

        <!-- ══════════════════════════════════════════════════════════════════ -->
        <!-- ROW 7: Tap hint (right-aligned, subtle)                            -->
        <!-- ══════════════════════════════════════════════════════════════════ -->

        <TextView
            android:id="@+id/tvTapHint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:fontFamily="sans-serif"
            android:text="tap for details"
            android:textColor="@color/mint_sage"
            android:textSize="10sp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMatchStatus"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
