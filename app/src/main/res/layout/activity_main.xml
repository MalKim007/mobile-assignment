<?xml version="1.0" encoding="utf-8"?>
<!-- Forest Apothecary - Main Activity Layout -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_mint"
    tools:context=".MainActivity">

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- HEADER SECTION - Forest themed app header                           -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_header_forest"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Leaf Icon -->
        <ImageView
            android:id="@+id/ivHeaderIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_leaf"
            android:tint="@color/mint_sage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="ContentDescription,UseAppTint" />

        <!-- App Title -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="serif"
            android:text="Ingredients Analyzer"
            android:textColor="@color/snow_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintBottom_toBottomOf="@id/ivHeaderIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHeaderIcon"
            app:layout_constraintTop_toTopOf="@id/ivHeaderIcon" />

        <!-- Subtitle -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.05"
            android:text="Powered by On-Device AI"
            android:textColor="@color/mint_sage"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- DATASET SELECTION SECTION                                           -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/datasetSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/bg_section_card"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <!-- Section Label -->
        <TextView
            android:id="@+id/labelDataset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:text="SELECT DATASET"
            android:textAllCaps="true"
            android:textColor="@color/sage_green"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Dataset Spinner -->
        <Spinner
            android:id="@+id/spinnerDataset"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/bg_input_field"
            android:dropDownWidth="match_parent"
            android:paddingStart="16dp"
            android:paddingEnd="40dp"
            android:popupBackground="@color/snow_white"
            app:layout_constraintEnd_toStartOf="@id/btnLoadDataset"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelDataset"
            tools:ignore="RtlSymmetry" />

        <!-- Load Button -->
        <Button
            android:id="@+id/btnLoadDataset"
            style="@style/ForestButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginTop="10dp"
            android:minWidth="80dp"
            android:paddingHorizontal="24dp"
            android:text="Load"
            android:textAllCaps="false"
            app:cornerRadius="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelDataset" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SELECTION INFO & BUTTONS                                            -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <!-- Selection Info Text -->
    <TextView
        android:id="@+id/tvSelectionInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:text="Select items to predict"
        android:textColor="@color/sage_green"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/datasetSection"
        tools:visibility="visible" />

    <!-- Selection Buttons Row -->
    <LinearLayout
        android:id="@+id/selectionButtonsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSelectionInfo"
        tools:visibility="visible">

        <!-- Select All Button -->
        <Button
            android:id="@+id/btnSelectAll"
            style="@style/ForestButtonOutlined"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Select All"
            android:textSize="12sp" />

        <!-- Deselect All Button -->
        <Button
            android:id="@+id/btnDeselectAll"
            style="@style/ForestButtonOutlined"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:text="Clear"
            android:textSize="12sp" />

        <!-- Predict Button - Primary action -->
        <Button
            android:id="@+id/btnStartPrediction"
            style="@style/ForestButton.Dark"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1.2"
            android:enabled="false"
            android:text="Predict (0)"
            android:textSize="13sp"
            app:backgroundTint="@color/deep_forest" />

    </LinearLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- PROGRESS SECTION                                                    -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/progressSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_section_card"
        android:padding="16dp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/selectionButtonsRow"
        tools:visibility="visible">

        <!-- Progress Label -->
        <TextView
            android:id="@+id/labelProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.1"
            android:text="ANALYZING"
            android:textAllCaps="true"
            android:textColor="@color/sage_green"
            android:textSize="11sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Cancel Button -->
        <Button
            android:id="@+id/btnCancel"
            style="@style/ForestButtonCancel"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:minWidth="0dp"
            android:paddingHorizontal="12dp"
            android:text="Cancel"
            android:textColor="@color/deep_forest"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@id/labelProgress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/labelProgress" />

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressOverall"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
            android:layout_width="0dp"
            android:layout_height="8dp"
            android:layout_marginTop="12dp"
            android:max="10"
            android:progress="3"
            android:progressDrawable="@drawable/progress_horizontal_forest"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/labelProgress" />

        <!-- Progress Text -->
        <TextView
            android:id="@+id/tvProgress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="sans-serif"
            android:lineSpacingMultiplier="1.3"
            android:textColor="@color/forest_green"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressOverall"
            tools:text="Processing item 3 of 10\nChocolate Fudge Cake" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- RESULTS RECYCLERVIEW                                                -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:clipToPadding="false"
        android:paddingHorizontal="12dp"
        android:paddingBottom="8dp"
        android:scrollbars="none"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toTopOf="@id/summarySection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressSection"
        tools:listitem="@layout/item_food_prediction" />

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- EMPTY STATE                                                         -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/summarySection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressSection">

        <!-- Empty State Icon -->
        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:alpha="0.4"
            android:src="@drawable/ic_leaf"
            android:tint="@color/sage_green"
            app:layout_constraintBottom_toTopOf="@id/tvEmptyState"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:ignore="ContentDescription,UseAppTint" />

        <!-- Empty State Text -->
        <TextView
            android:id="@+id/tvEmptyState"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="48dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:text="Select a dataset and tap Load\nto view food items for analysis"
            android:textColor="@color/sage_green"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivEmptyIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- SUMMARY SECTION                                                     -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/summarySection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:cardBackgroundColor="@color/forest_green"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:visibility="visible">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Summary Icon -->
            <ImageView
                android:id="@+id/ivSummaryIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_check_circle"
                android:tint="@color/mint_sage"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription,UseAppTint" />

            <!-- Summary Label -->
            <TextView
                android:id="@+id/labelSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="sans-serif-medium"
                android:letterSpacing="0.05"
                android:text="ANALYSIS COMPLETE"
                android:textAllCaps="true"
                android:textColor="@color/mint_sage"
                android:textSize="11sp"
                app:layout_constraintBottom_toBottomOf="@id/ivSummaryIcon"
                app:layout_constraintStart_toEndOf="@id/ivSummaryIcon"
                app:layout_constraintTop_toTopOf="@id/ivSummaryIcon" />

            <!-- Accuracy -->
            <TextView
                android:id="@+id/tvSummaryAccuracy"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:textColor="@color/snow_white"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/ivSummaryIcon"
                tools:text="Accuracy: 8/10 (80%) correct predictions" />

            <!-- Metrics -->
            <TextView
                android:id="@+id/tvSummaryMetrics"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:fontFamily="monospace"
                android:textColor="@color/mint_sage"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSummaryAccuracy"
                tools:text="Avg Latency: 2500ms | Avg TTFT: 450ms | Total: 25.0s" />

            <!-- Firestore Status -->
            <TextView
                android:id="@+id/tvSummaryFirestore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawableStart="@drawable/ic_check_circle"
                android:drawablePadding="6dp"
                android:drawableTint="@color/cream_mint"
                android:fontFamily="sans-serif"
                android:textColor="@color/cream_mint"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvSummaryMetrics"
                tools:ignore="UseCompatTextViewDrawableApis"
                tools:text="Results saved to Firebase Firestore" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>
