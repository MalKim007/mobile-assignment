<?xml version="1.0" encoding="utf-8"?>
<!-- Forest Apothecary - Model Comparison Screen
     Aesthetic: Botanical specimen catalog meets scientific dashboard
     Natural, refined, with organic curves and earthy depth -->
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_mint">

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- HEADER SECTION - Botanical specimen header                          -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/bg_header_forest"
        android:padding="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Leaf Icon - Botanical accent -->
        <ImageView
            android:id="@+id/ivHeaderIcon"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@drawable/ic_compare"
            app:tint="@color/mint_sage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="Compare models" />

        <!-- Title - Elegant serif -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="serif"
            android:text="Model Comparison"
            android:textColor="@color/snow_white"
            android:textSize="24sp"
            android:textStyle="bold"
            android:letterSpacing="0.02"
            app:layout_constraintBottom_toBottomOf="@id/ivHeaderIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivHeaderIcon"
            app:layout_constraintTop_toTopOf="@id/ivHeaderIcon" />

        <!-- Subtitle - Scientific annotation style -->
        <TextView
            android:id="@+id/tvSubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="sans-serif"
            android:letterSpacing="0.08"
            android:text="Aggregate Performance Metrics"
            android:textAllCaps="true"
            android:textColor="@color/mint_sage"
            android:textSize="10sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- CONTROLS ROW - Refresh & Info                                       -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controlsRow"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <!-- Info badge - Specimen count style -->
        <TextView
            android:id="@+id/tvInfoBadge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_info_badge"
            android:fontFamily="sans-serif-medium"
            android:letterSpacing="0.05"
            android:paddingHorizontal="12dp"
            android:paddingVertical="6dp"
            android:text="3 MODELS • 200 SAMPLES EACH"
            android:textAllCaps="true"
            android:textColor="@color/forest_green"
            android:textSize="10sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Refresh Button - Outlined botanical style -->
        <Button
            android:id="@+id/btnRefresh"
            style="@style/ForestButtonOutlined"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:minWidth="100dp"
            android:drawableStart="@drawable/ic_refresh"
            android:drawablePadding="6dp"
            android:paddingHorizontal="16dp"
            android:text="Refresh"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- LOADING INDICATOR                                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <ProgressBar
        android:id="@+id/progressLoading"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:indeterminateTint="@color/forest_green"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/controlsRow"
        tools:visibility="visible" />

    <!-- Loading text -->
    <TextView
        android:id="@+id/tvLoadingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif"
        android:text="Fetching model data..."
        android:textColor="@color/sage_green"
        android:textSize="13sp"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/progressLoading"
        tools:visibility="visible" />

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- MODEL CARDS SCROLLVIEW - Specimen catalog style                     -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <ScrollView
        android:id="@+id/scrollViewModels"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:clipToPadding="false"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="32dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:paddingBottom="16dp"
        android:scrollbars="none"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/controlsRow">

        <LinearLayout
            android:id="@+id/modelCardsContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="16dp"
            android:clipToPadding="false" />

    </ScrollView>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- EMPTY STATE                                                         -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/controlsRow"
        tools:visibility="gone">

        <ImageView
            android:id="@+id/ivEmptyIcon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:alpha="0.3"
            android:src="@drawable/ic_compare"
            app:tint="@color/sage_green"
            app:layout_constraintBottom_toTopOf="@id/tvEmptyTitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            android:contentDescription="No data" />

        <TextView
            android:id="@+id/tvEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="serif"
            android:text="No Predictions Yet"
            android:textColor="@color/forest_green"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/tvEmptySubtitle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivEmptyIcon" />

        <TextView
            android:id="@+id/tvEmptySubtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="48dp"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:lineSpacingMultiplier="1.4"
            android:text="Run predictions on the Home screen\nto populate comparison data"
            android:textColor="@color/sage_green"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmptyTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ═══════════════════════════════════════════════════════════════════ -->
    <!-- BOTTOM NAVIGATION                                                   -->
    <!-- ═══════════════════════════════════════════════════════════════════ -->

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/snow_white"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:itemActiveIndicatorStyle="@style/BottomNavIndicator"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
